<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AICharacterChat.UI.ViewModels"
             xmlns:converters="using:AICharacterChat.UI.Converters"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="AICharacterChat.UI.Views.CharacterManagementView"
             x:DataType="vm:CharacterManagementViewModel">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Characters List Panel -->
        <Border Grid.Column="0" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#34495E" Padding="15">
                    <TextBlock Text="Danh sách nhân vật" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              FontSize="16"/>
                </Border>

                <!-- Search -->
                <Border Grid.Row="1" Background="#F8F9FA" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                Text="{Binding SearchText}"
                                Watermark="Tìm kiếm nhân vật..."
                                Margin="0,0,10,0">
                            <TextBox.KeyBindings>
                                <KeyBinding Gesture="Enter" Command="{Binding SearchCharactersCommand}"/>
                            </TextBox.KeyBindings>
                        </TextBox>

                        <Button Grid.Column="1"
                               Content="Tìm"
                               Command="{Binding SearchCharactersCommand}"
                               Padding="15,8"/>
                    </Grid>
                </Border>

                <!-- Characters List -->
                <ScrollViewer Grid.Row="2">
                    <ItemsControl ItemsSource="{Binding Characters}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Padding="15" 
                                       Background="{Binding IsSelected, Converter={x:Static converters:BooleanToBackgroundConverter.Instance}}"
                                       Command="{Binding $parent[UserControl].((vm:CharacterManagementViewModel)DataContext).SelectCharacterCommand}"
                                       CommandParameter="{Binding}"
                                       HorizontalContentAlignment="Stretch"
                                       BorderThickness="0">
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                  Text="{Binding Name}" 
                                                  FontWeight="Bold" 
                                                  FontSize="14"/>
                                        
                                        <TextBlock Grid.Row="1"
                                                  Text="{Binding Description}" 
                                                  FontSize="12" 
                                                  Foreground="#7F8C8D" 
                                                  TextWrapping="Wrap"
                                                  MaxLines="3"
                                                  Margin="0,4,0,0"/>
                                        
                                        <TextBlock Grid.Row="2"
                                                  Text="{Binding CreatedAt, StringFormat='Tạo: {0:dd/MM/yyyy}'}" 
                                                  FontSize="10" 
                                                  Foreground="#95A5A6"
                                                  Margin="0,4,0,0"/>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Action Buttons -->
                <Border Grid.Row="3" Background="#F8F9FA" Padding="10">
                    <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                        <Button Content="Nhân vật mới"
                               Command="{Binding StartNewCharacterCommand}"
                               Background="#27AE60"
                               Padding="15,8"/>
                        
                        <Button Content="Chỉnh sửa"
                               Command="{Binding StartEditCharacterCommand}"
                               IsEnabled="{Binding CanEdit}"
                               Background="#F39C12"
                               Padding="15,8"/>
                        
                        <Button Content="Xóa"
                               Command="{Binding DeleteCharacterCommand}"
                               CommandParameter="{Binding SelectedCharacter}"
                               IsEnabled="{Binding CanDelete}"
                               Background="#E74C3C"
                               Padding="15,8"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Character Details/Edit Panel -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#34495E" Padding="15" CornerRadius="4,4,0,0">
                <TextBlock Text="{Binding IsEditing, Converter={x:Static converters:EditModeHeaderConverter.Instance}}" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          FontSize="16"/>
            </Border>

            <!-- Form -->
            <ScrollViewer Grid.Row="1">
                <Border Background="#F8F9FA" Padding="20" CornerRadius="0,0,4,4">
                    <StackPanel Spacing="15">
                        <!-- Name -->
                        <StackPanel>
                            <TextBlock Text="Tên nhân vật *" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding CharacterName}"
                                    Watermark="Nhập tên nhân vật..."
                                    IsEnabled="{Binding !IsSaving}"/>
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel>
                            <TextBlock Text="Mô tả" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding CharacterDescription}"
                                    Watermark="Mô tả về nhân vật..."
                                    AcceptsReturn="True"
                                    Height="80"
                                    IsEnabled="{Binding !IsSaving}"/>
                        </StackPanel>

                        <!-- Avatar URL -->
                        <StackPanel>
                            <TextBlock Text="URL Avatar" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding AvatarUrl}"
                                    Watermark="https://example.com/avatar.jpg"
                                    IsEnabled="{Binding !IsSaving}"/>
                        </StackPanel>

                        <!-- System Prompt -->
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="System Prompt *" 
                                          FontWeight="Bold" 
                                          Margin="0,0,0,5"/>
                                
                                <Button Grid.Column="1"
                                       Content="Kiểm tra"
                                       Command="{Binding ValidateSystemPromptCommand}"
                                       FontSize="10"
                                       Padding="8,4"
                                       Background="#3498DB"/>
                            </Grid>
                            
                            <TextBox Text="{Binding SystemPrompt}"
                                    Watermark="Bạn là một nhân vật AI thông minh và thân thiện..."
                                    AcceptsReturn="True"
                                    Height="150"
                                    IsEnabled="{Binding !IsSaving}"/>
                            
                            <TextBlock Text="Hướng dẫn: System prompt định nghĩa tính cách và cách hành xử của nhân vật AI. Hãy mô tả chi tiết về tính cách, phong cách nói chuyện, và vai trò của nhân vật."
                                      FontSize="11"
                                      Foreground="#7F8C8D"
                                      TextWrapping="Wrap"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </ScrollViewer>

            <!-- Action Buttons -->
            <Border Grid.Row="2" Background="#F8F9FA" Padding="15" CornerRadius="0,0,4,4">
                <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                    <!-- Cancel button for edit mode -->
                    <Button Content="Hủy"
                           Command="{Binding CancelEditCommand}"
                           IsVisible="{Binding IsEditing}"
                           Background="#95A5A6"
                           Padding="20,8"/>
                    
                    <!-- Cancel button for new character mode -->
                    <Button Content="Hủy"
                           Command="{Binding CancelEditCommand}"
                           IsVisible="{Binding !IsEditing}"
                           Background="#95A5A6"
                           Padding="20,8"/>
                    
                    <!-- Save button for edit mode -->
                    <Button Content="Cập nhật"
                           Command="{Binding SaveCharacterCommand}"
                           IsEnabled="{Binding CanSave}"
                           IsVisible="{Binding IsEditing}"
                           Background="#F39C12"
                           Padding="20,8"/>
                    
                    <!-- Create button for new character mode -->
                    <Button Content="Tạo nhân vật"
                           Command="{Binding SaveCharacterCommand}"
                           IsEnabled="{Binding CanSave}"
                           IsVisible="{Binding !IsEditing}"
                           Background="#27AE60"
                           Padding="20,8"/>
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <Border Grid.Row="2" 
                   Background="#3498DB" 
                   Padding="10"
                   CornerRadius="4"
                   Margin="0,10,0,0"
                   IsVisible="{Binding StatusMessage, Converter={x:Static converters:ObjectToBooleanConverter.Instance}}">
                <TextBlock Text="{Binding StatusMessage}" 
                          Foreground="White" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>

</UserControl>

