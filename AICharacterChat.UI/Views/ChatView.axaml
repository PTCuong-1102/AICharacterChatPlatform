<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AICharacterChat.UI.ViewModels"
             xmlns:converters="using:AICharacterChat.UI.Converters"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="AICharacterChat.UI.Views.ChatView"
             x:DataType="vm:ChatViewModel">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Characters Panel -->
        <Border Grid.Column="0" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#34495E" Padding="10">
                    <TextBlock Text="Nhân vật" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              FontSize="14"/>
                </Border>

                <ScrollViewer Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding Characters}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Padding="10" 
                                       Background="{Binding IsSelected, Converter={x:Static converters:BooleanToBackgroundConverter.Instance}}"
                                       Command="{Binding $parent[UserControl].((vm:ChatViewModel)DataContext).SelectCharacterCommand}"
                                       CommandParameter="{Binding}"
                                       HorizontalContentAlignment="Stretch"
                                       BorderThickness="0">
                                    
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" 
                                                  FontWeight="Bold" 
                                                  FontSize="14"/>
                                        <TextBlock Text="{Binding Description}" 
                                                  FontSize="12" 
                                                  Foreground="#7F8C8D" 
                                                  TextWrapping="Wrap"
                                                  MaxLines="2"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Conversations Panel -->
        <Border Grid.Column="1" Background="#F8F9FA" BorderBrush="#BDC3C7" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#34495E" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                  Text="Cuộc hội thoại" 
                                  FontWeight="Bold" 
                                  Foreground="White" 
                                  FontSize="14"
                                  VerticalAlignment="Center"/>
                        
                        <Button Grid.Column="1"
                               Content="+"
                               Command="{Binding StartNewConversationCommand}"
                               Width="30" Height="30"
                               FontSize="16" FontWeight="Bold"
                               Background="#27AE60"
                               ToolTip.Tip="Cuộc hội thoại mới"/>
                    </Grid>
                </Border>

                <TextBlock Grid.Row="1" 
                          Text="{Binding SelectedCharacter.Name, StringFormat='Với: {0}'}"
                          Padding="10,5"
                          FontStyle="Italic"
                          Foreground="#7F8C8D"
                          IsVisible="{Binding SelectedCharacter, Converter={x:Static converters:ObjectToBooleanConverter.Instance}}"/>

                <ScrollViewer Grid.Row="2">
                    <ItemsControl ItemsSource="{Binding Conversations}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Padding="10" 
                                       Background="{Binding IsSelected, Converter={x:Static converters:BooleanToBackgroundConverter.Instance}}"
                                       Command="{Binding $parent[UserControl].((vm:ChatViewModel)DataContext).SelectConversationCommand}"
                                       CommandParameter="{Binding}"
                                       HorizontalContentAlignment="Stretch"
                                       BorderThickness="0">
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                  Text="{Binding Title}" 
                                                  FontWeight="Bold" 
                                                  FontSize="13"
                                                  TextWrapping="Wrap"/>
                                        
                                        <TextBlock Grid.Row="1"
                                                  Text="{Binding LastMessage}" 
                                                  FontSize="11" 
                                                  Foreground="#7F8C8D" 
                                                  TextWrapping="Wrap"
                                                  MaxLines="2"
                                                  Margin="0,2,0,0"/>
                                        
                                        <TextBlock Grid.Row="2"
                                                  Text="{Binding FormattedLastMessageTime}" 
                                                  FontSize="10" 
                                                  Foreground="#95A5A6"
                                                  HorizontalAlignment="Right"
                                                  Margin="0,2,0,0"/>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Chat Panel -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Chat Header -->
            <Border Grid.Row="0" Background="#34495E" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{Binding SelectedCharacter.Name, FallbackValue='Chọn nhân vật để bắt đầu'}" 
                                  FontWeight="Bold" 
                                  Foreground="White" 
                                  FontSize="16"/>
                        <TextBlock Text="{Binding SelectedConversation.Title, FallbackValue=''}" 
                                  Foreground="#BDC3C7" 
                                  FontSize="12"/>
                    </StackPanel>

                    <TextBlock Grid.Column="1"
                              Text="{Binding StatusMessage}" 
                              Foreground="#BDC3C7" 
                              FontSize="12"
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Messages Area -->
            <ScrollViewer Grid.Row="1" 
                         Name="MessagesScrollViewer"
                         Padding="15">
                <ItemsControl ItemsSource="{Binding Messages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,5" 
                                   Padding="12,8"
                                   CornerRadius="8"
                                   MaxWidth="400"
                                   Background="{Binding IsFromUser, Converter={x:Static converters:MessageBackgroundConverter.Instance}}"
                                   HorizontalAlignment="{Binding IsFromUser, Converter={x:Static converters:MessageAlignmentConverter.Instance}}">
                                
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                  Text="{Binding SenderDisplayName}" 
                                                  FontWeight="Bold" 
                                                  FontSize="12"
                                                  Foreground="{Binding IsFromUser, Converter={x:Static converters:MessageTextColorConverter.Instance}}"/>
                                        
                                        <TextBlock Grid.Column="1"
                                                  Text="{Binding FormattedTimestamp}" 
                                                  FontSize="10" 
                                                  Foreground="{Binding IsFromUser, Converter={x:Static converters:MessageTimeColorConverter.Instance}}"
                                                  VerticalAlignment="Top"/>
                                    </Grid>

                                    <TextBlock Text="{Binding Content}" 
                                              TextWrapping="Wrap" 
                                              FontSize="13"
                                              Foreground="{Binding IsFromUser, Converter={x:Static converters:MessageTextColorConverter.Instance}}"
                                              Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Message Input -->
            <Border Grid.Row="2" Background="#F8F9FA" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                            Text="{Binding MessageText}"
                            Watermark="Nhập tin nhắn..."
                            AcceptsReturn="True"
                            MaxHeight="100"
                            VerticalAlignment="Bottom"
                            IsEnabled="{Binding SelectedCharacter, Converter={x:Static converters:ObjectToBooleanConverter.Instance}}">
                        <TextBox.KeyBindings>
                            <KeyBinding Gesture="Enter" Command="{Binding SendMessageCommand}"/>
                        </TextBox.KeyBindings>
                    </TextBox>

                    <Button Grid.Column="1"
                           Content="Gửi"
                           Command="{Binding SendMessageCommand}"
                           IsEnabled="{Binding CanSendMessage}"
                           Margin="10,0,0,0"
                           Padding="20,8"
                           Background="#3498DB"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>

</UserControl>

